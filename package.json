{
  "name": "paddle",
  "version": "1.2.1",
  "description": "Paddle WordPress theme built with Bootstrap and underscores framework",
  "author": "Abidemi Kusimo",
  "license": "GPL-2.0-or-later",
  "scripts": {
    "watch": "node-sass sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "compile:css": "node-sass src/scss/ -o ./css",
    "compile:theme-css": "node-sass --include-path scss src/scss/theme.scss  ./css/theme.css  --output-style",
    "compile:woo-css": "node-sass --include-path scss src/scss/woocommerce.scss  ./css/woocommerce.css true --output-style",
    "compile:theme-rtl": "rtlcss css/theme.css css/theme-rtl.css",
    "compile:woo-rtl": "rtlcss css/woocommerce.css css/woocommerce-rtl.css",
    "minify:theme-css": "node-sass --include-path scss src/scss/theme.scss  ./css/theme.min.css --output-style compressed",
    "minify:woo-css": "node-sass --include-path scss src/scss/woocommerce.scss  ./css/woocommerce.min.css --source-map ./css/woocommerce.min.css.map --output-style compressed",
    "css:minify": "npm run minify:theme-css && npm run minify:woo-css",
    "process:styles-theme": "npm run compile:theme-css && npm run minify:theme-css && npm run compile:theme-rtl",
    "process:styles-woo": "npm run compile:woo-css && npm run minify:woo-css  && npm run compile:woo-rtl",
    "process:styles": "npm run compile:theme-css && npm run minify:theme-css && npm run compile:theme-rtl && npm run compile:woo-css && npm run minify:woo-css  && npm run compile:woo-rtl",
    "lint:scss": "wp-scripts lint-style 'src/scss/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'src/js/*.js'",
    "bundle": "dir-archiver --src . --dest ../paddle.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore .babelrc README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock src bundled style.css.map gulpfile.babel.js"
  },
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/kusimo/paddle#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kusimo/paddle"
  },
  "bugs": {
    "url": "https://github.com/kusimo/paddle/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/register": "^7.18.9",
    "@wordpress/scripts": "^19.2.2",
    "browser-sync": "^2.27.10",
    "dir-archiver": "^1.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat-css": "^3.1.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-purgecss": "^4.0.3",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-rtlcss": "^1.4.2",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-wp-pot": "^2.5.0",
    "gulp-zip": "^5.0.2",
    "node-sass": "^7.0.1",
    "rtlcss": "^3.5.0",
    "sass": "^1.55.0",
    "yargs": "^17.5.1"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "dependencies": {
    "bootstrap": "^5.3.0-alpha1",
    "gulp-cli": "^2.3.0"
  }
}
